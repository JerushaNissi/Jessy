<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
   
   
    <bean id="helloWorld" class="prg1.HelloWorld" destroy-method="stopMethod">
   	<property name="message" value="Hello World..!"/>
   	</bean>
   
   
   <bean id="emp" class="prg1.Employee" init-method="startMethod">
   	<property name="name" value="Jerusha Nissi Mane"/>
   	<property name="dept" value="Java"/>
   </bean>
   
   <bean id="stu" class="prg2.Student" scope = "prototype">
   <!-- here values should not be provided for prototype scope -->
   </bean>
   
   <bean id="addr" class="prg2.Address">
   		<constructor-arg value="10"/>
   		<constructor-arg value="Gandhi nagar"/>
   		<constructor-arg value="Hyderabad"/>
   </bean>
   
    <bean id="per" class="prg2.Person">
   		<constructor-arg value="Nissi"/>
   		<constructor-arg value="22"/>
   		<constructor-arg> <ref bean="addr"/></constructor-arg>
   </bean>
      
   <bean class="prg1.InitBeans"/> 
   
  
   </beans>